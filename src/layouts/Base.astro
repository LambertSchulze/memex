---
const { title, tags } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="" />
    <title>{title ?? "..."}</title>
    <meta name="keywords" content=`${tags}` />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    display: grid;
    align-content: center;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;

    margin: 0;
    padding: 0;
  }
</style>
