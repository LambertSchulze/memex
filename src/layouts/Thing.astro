---
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";

interface Props {
  post: CollectionEntry<"Things">;
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<main>
  <article>
    <Content />
  </article>
</main>

<style>
  article {
    max-width: 60ch;

    border: thick double cornflowerblue;

    padding-inline: 1ch;

    img {
      width: 100%;
      height: 100%;
    }
  }
</style>
